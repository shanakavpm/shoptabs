{
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Models\\": "src/Models/",
            "Controllers\\": "src/Controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "fakerphp/faker": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
